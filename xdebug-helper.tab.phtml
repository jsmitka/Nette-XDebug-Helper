<span onclick="XDebugHelper.toggle();" style="cursor: pointer;"><img src="" alt="" id="xdebug-helper-icon" /> Xdebug</span>

<script type="text/javascript">
var XDebugHelper = {
	inactiveIcon: '',
	activeIcon: '',

	init: function () {
		if (this.isStarted()) {
			this.setIcon(this.activeIcon);
		} else {
			this.setIcon(this.inactiveIcon);
		}
	},

	setIcon: function (icon) {
		document.getElementById('xdebug-helper-icon').src = 'data:image/png;base64,' + icon;
	},

	isStarted: function() {
		return document.cookie.indexOf('XDEBUG_SESSION=') != -1;
	},

	toggle: function () {
		if (this.isStarted()) {
			this.stop();
		} else {
			this.start();
		}
	},

	start: function () {
		document.cookie = 'XDEBUG_SESSION=<?php echo $ideKey; ?>; path=/';
		this.setIcon(this.activeIcon);
	},

	stop: function () {
		document.cookie = 'XDEBUG_SESSION=; expires=Thursday, 01-Jan-70 00:00:00 GMT; path=/';
		this.setIcon(this.inactiveIcon);
	}
};

XDebugHelper.init();
</script>